name: Docker build and push

on:
  workflow_run:
    workflows: ["Docker Image CI"]
    types:
      - completed
    branches: [ "main" ]
  workflow_call:
  push:
    tags:
      - v*.*.*

jobs:
  release:
    name: Build & release to DockerHub
    runs-on: ubuntu-latest
    if: ${{ github.event.workflow_run.conclusion == 'success' }}

    steps:
      - name: Checkout
        uses: actions/checkout@v3

      - name: Docker meta
        id: meta
        uses: docker/metadata-action@v4
        with:
          # List of Docker images to use as base name for tags
          images: |
            btsomogyi/claude-flow-container
          # Generate Docker tags based on the following events/attributes
          # Set latest tag for default branch
          tags: |
            type=raw,value=latest,enable=${{ github.ref == format('refs/heads/{0}', 'main') }}
            type=semver,pattern={{version}}
            type=semver,pattern={{major}}.{{minor}}
            type=semver,pattern={{major}}
          labels: |
            org.opencontainers.image.title=claude-flow-container
            org.opencontainers.image.description=Dev container for claude-flow based workflow.
            org.opencontainers.image.vendor=btsomogyi
            org.opencontainers.image.url=https://www.fractalfrontier.com/
            org.opencontainers.image.source=https://github.com/btsomogyi/claude-flow-container
            org.opencontainers.image.licenses=MIT

      - name: Login to Docker Hub
        uses: docker/login-action@v2.2.0
        with:
          username: ${{ secrets.DOCKERHUB_USERNAME }}
          password: ${{ secrets.DOCKERHUB_TOKEN }}

      - name: Build and push
        uses: docker/build-push-action@v4
        with:
          context: .
          push: ${{ github.event_name != 'pull_request' }}
          tags: ${{ steps.meta.outputs.tags }}
          labels: ${{ steps.meta.outputs.labels }}
